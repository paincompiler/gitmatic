##########settings##########
set -o errexit
set -o errtrace
# set -o nounset
set -o pipefail
# set -o xtrace
##########settings##########

function finish {
    # cleanup code here
    echo "cleaning up"
}

trap finish EXIT

# script here

echo -n "Enter your working email ($(git config --global user.email)): "
read EMAIL 
if ! [[ $EMAIL =~ '(.+)@(.+)' ]] ; then
    echo -n "${EMAIL} is not in illegal email format"
    exit 1
fi
